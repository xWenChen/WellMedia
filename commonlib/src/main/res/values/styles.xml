<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="DialogDesc">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="DialogCancel">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_a0</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_cancel_btn</item>
    </style>
    <style name="DialogConfirm">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_confirm_btn</item>
    </style>

    <style name="SecondText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>